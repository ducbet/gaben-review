<%= form_for @genre, url: yield(:url), class: "uk-form-stacked" do |f| %>
  <div class="uk-margin">
    <div class="uk-form-controls">
      <%= render "shared/error_messages", object: @genre %>
    </div>
  </div>
  <div class="uk-margin">
    <%= f.label :genre, t("genres.name") %>
    <div class="uk-form-controls">
      <div class="uk-inline">
        <span class="uk-form-icon" uk-icon="icon: user"></span>
        <%= f.text_field :genre, class: "uk-input uk-form-width-large" %>
      </div>
    </div>
  </div>

  <div class="uk-margin">
    <%= f.submit yield(:button_text), class: "uk-button uk-button-primary", style: "font-size:1em" %>
  </div>
<% end %>
