<ul>
  <% 1.upto(score) do |n| %>
    <li>
      <i class="fa fa-star" aria-hidden="true" style="color: #fff"></i>
    </li>
  <% end %>
  <% unless score % 1 == 0 %>
    <li>
      <i class="fa fa-star-half-o" aria-hidden="true" style="color: #fff"></i>
    </li>
  <% end %>
  <% (score+1).ceil.upto(Settings.max_score.to_i) do |n| %>
    <li>
      <i class="fa fa-star-o" aria-hidden="true" style="color: #fff"></i>
    </li>
  <% end %>
  <span style="color: #fff"><%= score %></span>
</ul>
