<div class="uk-width-1-3@m">
  <div class="uk-card uk-card-default">
    <div class="uk-card-media-top">
      <%= link_to game_path(game), class: "game_image-container" do %>
        <%= image_tag game.picture.url, alt: "" %>
      <% end %>
    </div>
    <div class="uk-card-body">
      <h3 class="uk-card-title">
        <%= link_to game_path(game), style: "color: #333; font-weight: bolder;" do %>
          <%= game.name %>
        <% end %>
      </h3>
      <br>
      <div id="game_detail"><%= t (".details") %>: <%= game.details %></div>
      <p><%= t (".score") %>: <%= game.score %></p>
      <p><%= t (".genre") %>:
        <% game.genres.each do |genre| %>
          <%= button_tag genre.genre, class: "search_genre" %>
        <% end %>
      </p>
      <p>
        <%= t (".price") %>:
        <% if game.price > 0 %>
          <%= "$" + game.price.to_s %>
        <% else %>
          <%= t (".free") %>
        <% end %>
      </p>
      <p><%= t (".download") %>: <%= game.download_count %></p>
    </div>
  </div>
</div>
